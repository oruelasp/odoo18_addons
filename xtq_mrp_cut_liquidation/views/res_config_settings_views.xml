<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.xtq.mrp.cut.liquidation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='workorder_settings']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="mrp_cut_liquidation_settings">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Liquidación de Corte</span>
                        <span class="fa fa-lg fa-cutlery" title="Liquidación de Corte"/>
                        <div class="text-muted">
                            Configure las categorías de producto para la liquidación de corte en las órdenes de producción.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="liquidation_product_categ_ids" class="col-lg-4 o_light_label"/>
                                <field name="liquidation_product_categ_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
