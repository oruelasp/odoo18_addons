<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='workorder_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Restricción de Finalización de OT</span>
                        <div class="text-muted">
                            Establece reglas para finalizar Órdenes de Trabajo basadas en albaranes.
                        </div>
                        <div class="content-group mt16">
                            <field name="workorder_picking_restriction" widget="radio"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
