<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_import_from_op" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.import.from.op</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_import_from_op_wizard"
                        string="Importar desde OP"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'draft'"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="workorder_origin" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
