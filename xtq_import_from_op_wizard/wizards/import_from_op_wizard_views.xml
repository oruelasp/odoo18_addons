<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_from_op_wizard_form" model="ir.ui.view">
        <field name="name">import.from.op.wizard.form</field>
        <field name="model">import.from.op.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Producto Terminado desde Orden de Producción">
                <group>
                    <group>
                        <field name="production_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="workorder_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>

                <!-- Botón interno para cargar producto -->
                <group>
                    <button name="action_load_product"
                            type="object"
                            string="Cargar Producto"
                            class="btn-secondary"/>
                </group>

                <field name="line_ids" nolabel="1">
                    <list editable="bottom" create="0" delete="0">
                        <field name="selected"/>
                        <field name="product_id" readonly="1"/>
                        <field name="planned_qty" readonly="1" string="Cantidad Programada"/>
                        <field name="quantity_to_move" string="Cantidad Ejecutada"/>
                        <field name="product_uom_id" readonly="1"/>
                    </list>
                </field>
                <footer>
                    <button name="action_import_lines"
                            string="Añadir y Cerrar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_from_op_wizard" model="ir.actions.act_window">
        <field name="name">Importar Producto Terminado desde OP</field>
        <field name="res_model">import.from.op.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
