<!-- static/src/matrix_view/matrix_view.xml -->
<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="xtq_web_matrix_view.MatrixView" owl="1">
        <Layout display="controlPanelProps">
            <t t-if="model.matrixData.is_empty">
                <div class="o_content">
                    <div class="text-center p-5 text-muted">
                        <h2>Vista Matriz Editable</h2>
                        <p t-esc="model.matrixData.message || 'Aplique un filtro para cargar los datos.'"/>
                    </div>
                </div>
            </t>
            <t t-if="!model.matrixData.is_empty">
                <div class="o_content">
                    <!-- El renderizado de la tabla se manejará aquí con t-foreach -->
                </div>
            </t>
        </Layout>
    </t>
</templates> 