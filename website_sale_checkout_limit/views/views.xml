<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.livechat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="sale_invoicing_settings" position="inside">
                <setting>
                    <span class="o_form_label">Max Amount to Checkout by Year</span>
                    <div class="text-muted">
                        Max cart amount required to checkout.
                    </div>
                    <div class="content-group">
                        <div class="mt16">
                            <field name="min_checkout_amount" class="o_light_label" widget="monetary"/>
                            <field name="min_amount_type" class="o_light_label"/>
                        </div>
                    </div>
                </setting>

                <setting>
                    <span class="o_form_label">Message</span>
                    <div class="text-muted">
                        Message to show if cart amount value less than minimum amount
                    </div>
                    <div class="content-group">
                        <div class="mt16">
                            <field name="info_message" class="o_light_label"/>
                        </div>
                    </div>
                </setting>


            </block>
        </field>
    </record>

</odoo>
