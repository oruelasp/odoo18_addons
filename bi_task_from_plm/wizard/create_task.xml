<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_task_wizard" model="ir.ui.view">
        <field name="name">create.task.wizard.form.view</field>
        <field name="model">create.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Task">
                <group>
                    <group>
                        <field name="project_id" required="1"/>
                        <field name="task_title" required="1"/>
                        <field name="user_ids" widget="many2many_tags" required="1"/>
                        <field name="allocated_hours"/>
                    </group>
                    <group>
                        <field name="task_deadline"/>
                        <field name="project_tag_ids" widget="many2many_tags"/>
                        <field name="task_desc"/>
                    </group>
                </group>
                <footer>
                    <button name="create_task_from_eco" string="Create Task" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_task_wizard" model="ir.actions.act_window">
        <field name="name">Create Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.task.wizard</field>
        <field name="view_mode">form</field>
        <field name='target'>new</field>
        
    </record>
    
</odoo>
