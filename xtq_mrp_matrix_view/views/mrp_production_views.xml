<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_production_matrix_editable_app" model="ir.ui.view">
            <field name="name">mrp.production.matrix.editable.app</field>
            <field name="model">mrp.production</field>
            <field name="arch" type="xml">
                <matrix editable="top" filter_by="origin">
                    <field name="product_qty" />
                </matrix>
            </field>
        </record>

        <record id="mrp.mrp_production_action" model="ir.actions.act_window">
            <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity,matrix</field>
        </record>
    </data>

</odoo> 