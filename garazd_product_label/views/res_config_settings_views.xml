<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.garazd_product_label</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='product_general_settings']" position="after">
                <block title="Custom Labels" id="garazd_product_label_setting">
                    <setting id="product_label_printing_wizard"
                             string="Replace Standard Print Wizard"
                             help="When enabled, the Print Labels button opens the new alternative print wizard">
                        <field name="replace_standard_wizard"/>
                        <div class="text-muted">
                            Anytime, you can also open the alternative print wizard through the <b>Print</b> â€£ <b>Custom Product Labels</b> menu.
                        </div>
                    </setting>
                    <setting id="product_label_preview_setting" string="Label Preview" help="Select records to show on the label preview" invisible="1">
                        <div class="content-group">
                            <div name="label_demo_separator" class="d-none"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

</odoo>
