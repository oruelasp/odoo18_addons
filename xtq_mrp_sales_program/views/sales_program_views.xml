<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_sales_program_form" model="ir.ui.view">
        <field name="name">sales.program.form</field>
        <field name="model">sales.program</field>
        <field name="arch" type="xml">
            <form string="Programa de Venta">
                <header>
                    <button name="action_calculate_matrix" type="object" string="Calcular Matriz" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Aprobar" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_generate_productions" type="object" string="Generar OPs" class="oe_highlight" invisible="state != 'approved'"/>
                    <button name="action_cancel" type="object" string="Cancelar" invisible="state not in ('draft', 'approved')"/>
                    <button name="action_draft" type="object" string="Pasar a Borrador" invisible="state not in ['cancel', 'approved']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_productions" type="object" class="oe_stat_button" icon="fa-gears">
                            <field name="production_count" widget="statinfo" string="Órdenes de Producción"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="date_planned_start"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="project_id"/>
                            <field name="picking_type_id"/>
                            <field name="location_src_id"/>
                            <field name="location_dest_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Líneas de Producción">
                            <separator string="Líneas de Producción"/>
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom_id" invisible="1"/>
                                    <field name="bom_id" optional="show"/>
                                    <field name="tag_ids" widget="many2many_tags" optional="show"/>
                                </list>
                            </field>
                            <group string="Etiquetas Globales" name="global_tags">
                                <field name="tag_ids" nolabel="1" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Curva de Tallas">
                             <group>
                                <field name="matrix_attribute_col_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="matrix_values_col_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                             </group>
                             <field name="matrix_curve_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="attribute_value_id" domain="[('attribute_id', '=', parent.matrix_attribute_col_id)]" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="proportion"/>
                                </list>
                             </field>
                        </page>
                        <page string="Atributos">
                            <field name="attribute_line_ids">
                                <list editable="bottom">
                                    <field name="attribute_id"/>
                                    <field name="attribute_value_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Matriz de Producción">
                            <field name="matrix_line_ids" readonly="1">
                                <list>
                                    <field name="sales_program_line_id"/>
                                    <field name="col_value_id"/>
                                    <field name="product_qty" sum="Total"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_sales_program_list" model="ir.ui.view">
        <field name="name">sales.program.list</field>
        <field name="model">sales.program</field>
        <field name="arch" type="xml">
            <list string="Programas de Venta">
                <field name="name"/>
                <field name="description"/>
                <field name="date_planned_start"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-info="state == 'done'"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sales_program" model="ir.actions.act_window">
        <field name="name">Programas de Venta</field>
        <field name="res_model">sales.program</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo Programa de Venta para proyectar la demanda.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_sales_program_root"
        name="Planificación"
        sequence="5"
        parent="mrp.menu_mrp_root"
    />
    <menuitem
        id="menu_sales_program"
        name="Programa de Ventas"
        action="action_sales_program"
        parent="xtq_mrp_sales_program.menu_sales_program_root"
        sequence="10"
    />

</odoo>
