<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View Subscriptions Change Customer wizard -->
    <record id="product_upper_text" model="ir.ui.view">
        <field name="name">upper.text.form</field>
        <field name="model">upper.text</field>
        <field name="arch" type="xml">
            <form string="Convertir a Mayusculas">
                <group>
                </group>
                <footer>
                    <button name="action_set_upper" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Subscriptions Change Customer -->
    <record id="action_upper_windows" model="ir.actions.act_window">
        <field name="name">Convertir a Mayusculas</field>
        <field name="res_model">upper.text</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_upper_text"/>
        <field name="context">{'active_so_ids': active_ids}</field>
        <field name="target">new</field>
    </record>

</odoo>
 