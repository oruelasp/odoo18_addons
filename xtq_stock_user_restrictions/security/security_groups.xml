<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="stock_restrictions_category" model="ir.module.category">
            <field name="name">Stock Restrictions (Technical)</field>
            <field name="description">Technical category for stock restriction features.</field>
            <field name="visible" eval="False"/>
        </record>

        <record id="group_stock_restrictions_user" model="res.groups">
            <field name="name">User with Stock Restrictions</field>
            <field name="category_id" ref="stock_restrictions_category"/>
            <field name="comment">This is a technical group assigned automatically to users who have stock restrictions enabled.</field>
        </record>

        <!-- Step 1: Create a new, visible group for global access -->
        <record id="group_stock_global_manager" model="res.groups">
            <field name="name">Global Inventory Management</field>
            <!-- Assign to a visible category like Inventory/Manager -->
            <field name="category_id" ref="stock.module_category_stock_management"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="comment">Users in this group have unrestricted access to all picking types and stock moves, bypassing the logic of this module.</field>
        </record>
    </data>
</odoo>
