<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="rule_stock_picking_type_user_restriction" model="ir.rule">
            <field name="name">User-specific Picking Type Restriction</field>
            <field name="model_id" ref="stock.model_stock_picking_type"/>
            <field name="groups" eval="[(4, ref('xtq_stock_user_restrictions.group_stock_restrictions_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('id', 'in', user._get_allowed_picking_type_ids())]</field>
        </record>

        <record id="rule_stock_picking_user_restriction" model="ir.rule">
            <field name="name">User-specific Stock Picking Restriction</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[(4, ref('xtq_stock_user_restrictions.group_stock_restrictions_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('picking_type_id', 'in', user._get_allowed_picking_type_ids())]</field>
        </record>

        <!-- Step 2: Create new rules that grant global access to the new group -->
        <record id="rule_stock_picking_type_global_access" model="ir.rule">
            <field name="name">Global Access to Picking Types</field>
            <field name="model_id" ref="stock.model_stock_picking_type"/>
            <field name="groups" eval="[(4, ref('xtq_stock_user_restrictions.group_stock_global_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_stock_picking_global_access" model="ir.rule">
            <field name="name">Global Access to Stock Pickings</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[(4, ref('xtq_stock_user_restrictions.group_stock_global_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    </data>
</odoo>
