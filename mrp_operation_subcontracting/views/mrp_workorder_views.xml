<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_workorder_tree_view_w_purchase_order" model="ir.ui.view">
        <field name="name">mrp.production.work.order.tree.view.with_purchase_order</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="purchase_order_count" string="Nº OCs" optional="show"/>
                <field name="is_subcontract" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_workorder_view_form_inherit_subcontract" model="ir.ui.view">
        <field name="name">mrp.workorder.form.inherit.subcontract</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_subcontract_po" string="Crear Orden de Servicio" type="object"
                        class="oe_highlight"
                        invisible="workcenter_id.is_subcontract == False"/>
            </xpath>
            <xpath expr="//field[@name='workcenter_id']" position="after">
                <field name="is_subcontract"/>
            </xpath>
            <xpath expr="//group[1]" position="after">
                <group string="Ordenes de Servicio de Subcontratación" name="subcontracting_pos" invisible="not is_subcontract">
                    <field name="purchase_order_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="date_order"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </list>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_workorder_tree_editable_view_mo_form_inherit_subcontract" model="ir.ui.view">
        <field name="name">mrp.production.work.order.list.editable.mo.form.inherit.subcontract</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view_mo_form"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="default_order">sequence_ref asc</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="sequence_ref"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <field name="purchase_order_count" string="Nº OCs" optional="show"/>
                <field name="is_subcontract" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
