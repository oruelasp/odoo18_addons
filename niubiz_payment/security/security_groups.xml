<?xml version="1.0" ?>
<odoo>
    <record id="module_niubiz_category" model="ir.module.category">
        <field name="name">Niubiz</field>
    </record>

    <!-- Niubiz User Group -->
    <record id="niubiz_group_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id"
               ref="module_niubiz_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Niubiz Manager Group -->
    <record id="niubiz_group_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id"
               ref="module_niubiz_category"/>
        <field name="implied_ids"
               eval="[(4, ref('niubiz_group_user'))]"/>
        <field name="users"
               eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>
</odoo>