<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- This record adds the 'cost' field to the POP-UP FORM when creating/editing an operation -->
        <record id="mrp_routing_workcenter_view_form_add_cost" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.add.cost</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='workcenter_id']" position="after">
                    <field name="cost" widget="monetary"/>
                </xpath>
            </field>
        </record>

        <!-- This new record adds the 'cost' field to the LIST VIEW on the Bill of Materials -->
        <record id="mrp_routing_workcenter_tree_view_add_cost" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.tree.add.cost</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='workcenter_id']" position="after">
                    <field name="cost" widget="monetary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
