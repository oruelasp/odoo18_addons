<!-- views/mrp_production_views.xml -->
<odoo>
    <record id="mrp_production_form_view_xtq_sheet" model="ir.ui.view">
        <field name="name">mrp.production.form.xtq.sheet</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <!-- Add the button and field to the 'Miscellaneous' page -->
            <xpath expr="//page[@name='miscellaneous']//group" position="inside">
                <group string="Ficha de Producción">
                    <button name="action_create_production_sheet" 
                    string="Crear Ficha de Producción" type="object" 
                    class="oe_link" invisible="sample_bom_id != False"/>
                    <field name="sample_bom_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
