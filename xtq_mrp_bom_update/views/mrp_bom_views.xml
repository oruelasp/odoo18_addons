<!-- views/mrp_bom_views.xml -->
<odoo>
    <record id="mrp_bom_form_view_xtq_plm" model="ir.ui.view">
        <field name="name">mrp.bom.form.xtq.plm</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <!-- Remove the previous smart button to avoid duplication -->
            <xpath expr="//div[@name='button_box']/button[@name='action_update_proportional_quantities']" position="replace"/>

            <!-- Add the action button to the header -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_update_proportional_quantities"
                            string="Actualizar Cantidades"
                            type="object"
                            class="btn-primary"
                            icon="fa-cogs"
                            invisible="not has_related_eco_and_op"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
