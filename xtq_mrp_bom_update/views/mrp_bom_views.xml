<!-- views/mrp_bom_views.xml -->
<odoo>
    <record id="mrp_bom_form_view_xtq_plm" model="ir.ui.view">
        <field name="name">mrp.bom.form.xtq.plm</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                 <button name="action_update_proportional_quantities"
                        string="Actualizar Cantidades Proporcionales (OP)"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-cogs"
                        invisible="not has_related_eco_and_op">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Recalcular desde:</span>
                        <field name="related_production_id" readonly="1" class="o_stat_value"/>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
