<!-- views/mrp_eco_views.xml -->
<odoo>
    <record id="mrp_eco_view_form_xtq" model="ir.ui.view">
        <field name="name">mrp.eco.form.xtq</field>
        <field name="model">mrp.eco</field>
        <field name="inherit_id" ref="mrp_plm.mrp_eco_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Notas de Rechazo" name="rejection_notes">
                    <field name="rejection_note"/>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_new_revision']" position="before">
                <button name="action_reject" string="Rechazar" type="object"
                        invisible="stage_id.final_stage or not stage_id.allow_apply_change"/>
            </xpath>
        </field>
    </record>
</odoo>
