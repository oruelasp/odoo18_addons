<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista principal del Asistente de Selección de Atributos -->
        <record id="view_quant_attribute_selection_wizard_form" model="ir.ui.view">
            <field name="name">quant.attribute.selection.wizard.form</field>
            <field name="model">quant.attribute.selection.wizard</field>
            <field name="arch" type="xml">
                <form string="Selección Asistida de Lotes por Atributos">
                    <header>
                        <!-- Los botones de acción principal van aquí si se necesitan -->
                    </header>
                    <sheet>
                        <!-- === SECCIÓN DE CABECERA INFORMATIVA === -->
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="picking_info"/>
                            </group>
                            <group>
                                <field name="demanded_quantity"/>
                                <field name="selected_quantity" style="font-weight: bold;"/>
                            </group>
                        </group>

                        <!-- === SECCIÓN DE PESTAÑAS === -->
                        <notebook>
                            <!-- PESTAÑA 1: Búsqueda y Lotes Disponibles -->
                            <page string="Búsqueda de Lotes">
                                <group string="Filtros por Atributos">
                                    <field name="search_filter_ids" nolabel="1">
                                        <list editable="bottom">
                                            <field name="attribute_id"/>
                                            <field name="value_id"/>
                                        </list>
                                    </field>
                                    <button name="action_search" string="Buscar" type="object" class="oe_highlight"/>
                                </group>
                                <div id="available_lines_placeholder"/> <!-- Placeholder para la lista dinámica -->
                                <button name="action_add_to_selection" string="Añadir a la Selección" type="object" class="btn-secondary"/>
                            </page>

                            <!-- PESTAÑA 2: Lotes Seleccionados -->
                            <page string="Lotes Seleccionados">
                                 <div id="selected_lines_placeholder"/> <!-- Placeholder para la lista dinámica -->
                                 <button name="action_remove_from_selection" string="Quitar de la Selección" type="object" class="btn-secondary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_confirm_selection" string="Confirmar Selección" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
