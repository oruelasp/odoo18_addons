<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 
            Heredamos de la vista que usa Odoo en la ventana emergente de selección de lotes
            y le inyectamos nuestro js_class para reemplazar su renderer por defecto.
            Se busca el tag <list> como dicta la convención de Odoo 18+.
        -->
        <record id="view_stock_quant_tree_editable_inherit_lot_attributes" model="ir.ui.view">
            <field name="name">stock.quant.tree.editable.inherit.lot.attributes</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">lot_attribute_list_renderer</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
