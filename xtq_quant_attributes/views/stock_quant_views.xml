<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Esta es una vista base para la lista de stock.quant.
            Hereda de la vista original de Odoo y no añade campos visibles.
            Su propósito es tener un ID único (xmlid) al que la lógica de Python
            pueda referirse para aplicar las modificaciones dinámicas (añadir columnas)
            sin afectar a otras vistas de stock.quant en el sistema.
        -->
        <record id="view_stock_quant_list_with_attributes" model="ir.ui.view">
            <field name="name">stock.quant.list.with.attributes</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <!-- No se necesitan modificaciones aquí, todo se hace en Python -->
            </field>
        </record>
    </data>
</odoo>
