<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_move_operations_form_inherit_quant_attributes" model="ir.ui.view">
            <field name="name">stock.move.operations.form.inherit.quant.attributes</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_move_operations_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_line_ids']/list" position="before">
                    <button name="action_open_attribute_selection_wizard"
                            type="object"
                            string="Seleccionar por Atributos"
                            class="btn-primary"
                            invisible="not product_id.show_quality_attrs_in_picking"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
