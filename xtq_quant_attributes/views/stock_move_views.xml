<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Heredamos de la vista de formulario de stock.picking para a침adir nuestro bot칩n
             en la vista de lista editable de las operaciones (stock.move) -->
        <record id="view_picking_form_inherit_quant_attributes" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.quant.attributes</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/list/button[@name='action_show_details']" position="after">
                    <!-- Bot칩n original del wizard, ahora invisible -->
                    <button name="action_show_attribute_selection"
                            type="object"
                            icon="fa-tasks"
                            string="Seleccionar por Atributos"
                            invisible="1"/>
                    
                    <!-- Nuevo bot칩n para la vista de stock.quant -->
                    <button name="action_open_stock_quant_list"
                            type="object"
                            icon="fa-cubes"
                            string="Stock por Atributos"
                            invisible="not show_quality_attrs_button"/>
                    
                    <field name="show_quality_attrs_button" column_invisible="True"/>
                </xpath>
            </field>
        </record>

        <!-- Forzar que el pick_from de stock.move.line use nuestra lista con columnas de atributos -->
        <record id="view_stock_move_line_operation_tree_inherit_xtq_quant_pickfrom" model="ir.ui.view">
            <field name="name">stock.move.line.operations.list.inherit.xtq.pickfrom</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quant_id']" position="attributes">
                    <attribute name="context">{'default_location_id': location_id, 'default_product_id': product_id, 'search_view_ref': 'stock.quant_search_view', 'list_view_ref': 'xtq_quant_attributes.view_stock_quant_list_with_attributes', 'form_view_ref': 'stock.view_stock_quant_form', 'readonly_form': True, 'show_lot_attributes': True, 'lot_attributes_product_id': product_id}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_stock_move_line_detailed_operation_tree_inherit_xtq_quant_pickfrom" model="ir.ui.view">
            <field name="name">stock.move.line.detailed.operations.list.inherit.xtq.pickfrom</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quant_id']" position="attributes">
                    <attribute name="context">{'default_location_id': location_id, 'default_product_id': product_id, 'search_view_ref': 'stock.quant_search_view', 'list_view_ref': 'xtq_quant_attributes.view_stock_quant_list_with_attributes', 'form_view_ref': 'stock.view_stock_quant_form', 'readonly_form': False, 'show_lot_attributes': True, 'lot_attributes_product_id': product_id}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
