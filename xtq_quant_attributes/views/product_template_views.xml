<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_template_property_form_inherit_quant_attributes" model="ir.ui.view">
            <field name="name">product.template.form.inherit.quant.attributes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='traceability']" position="inside">
                    <field name="show_quality_attrs_in_picking" invisible="tracking != 'lot'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
